<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/components/card_design.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="container">
      <% for(const letter of letters) { %>
        <div class="card">
          <div class="card__content">
            <p><%= letter.subject %></p>
            <p><%= letter.body %></p>
          </div>
        </div>
      <% } %>
    </div>
  </body>
</html>
